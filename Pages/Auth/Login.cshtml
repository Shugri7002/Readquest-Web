@page
@model Readquest.Web.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Login – Readquest";
}

<section class="auth-hero">
  <div class="auth-hero__inner">
    <div class="auth-hero__text">
      <h1 class="display-hero">Your next adventure begins here.</h1>
      <p class="lead">Log in to continue your journey.</p>
    </div>

    <div class="auth-card">
      @if (!string.IsNullOrWhiteSpace(Model.Message))
      {
        <div class="small" style="color:var(--gold);margin-bottom:8px">@Model.Message</div>
      }
      <form method="post">
        <div class="form-row">
          <label>Email</label>
          <input type="email" name="Email" placeholder="Enter your email" required />
        </div>
        <div class="form-row">
          <label>Password</label>
          <input type="password" name="Password" placeholder="••••••••" required />
        </div>

        <button class="btn-gold" type="submit">Continue</button>

        <p class="small muted" style="text-align:center;margin-top:10px">
          Don’t have an account? <a class="link" href="/Auth/Register">Create one.</a>
        </p>
      </form>
    </div>
  </div>
</section>
