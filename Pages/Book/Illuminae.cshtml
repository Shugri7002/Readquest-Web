@page
@{
    ViewData["Title"] = "Illuminae – Readquest";
}
<section class="book-hero"><div class="book-inner">
  <div class="book-frame">
    <figure class="cover-wrap">
      <img class="book-cover" src="/img/books/illuminae.jpg" alt="Illuminae"/>
      <figcaption class="cover-meta">
        <span class="pages">608 pages</span>
        <div class="chips"><span class="chip">space</span><span class="chip">AI</span><span class="chip">survival</span></div>
      </figcaption>
    </figure>
    <div class="book-info">
      <h1 class="book-title">Illuminae</h1>
      <div class="byline">by <strong>Amie Kaufman &amp; Jay Kristoff</strong></div>
