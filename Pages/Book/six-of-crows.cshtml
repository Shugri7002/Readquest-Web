@page "/Book/six-of-crows"
@{
    ViewData["Title"] = "Six of Crows – Readquest";
}

@section Head {
  <link rel="stylesheet" href="/css/books.css" />
}

<section class="book-detail">     @* <= NEW: wrapper to scope overrides *@
  <div class="book-card">
    <!-- LEFT: Cover -->
    <figure class="book-cover-wrap">
      <img class="book-cover" src="/img/books/six-of-crows.jpg" alt="Six of Crows">
      <figcaption class="cover-meta">
        <span class="pages">465 pages</span>
        <div class="chips">
          <span class="chip">heist</span>
          <span class="chip">magic</span>
          <span class="chip">crime</span>
        </div>
      </figcaption>
    </figure>

    <!-- RIGHT: Info -->
    <div class="book-info">
      <h1 class="book-title">Six of Crows</h1>
      <div class="byline">by <strong>Leigh Bardugo</strong></div>

      <ul class="meta-list">
        <li>16+ • Dark, clever, intense</li>
        <li>If you like <b>Peaky Blinders with magic</b></li>
        <li class="rating"><span class="stars">★★★★★</span> <span class="muted">&nbsp;Very popular</span></li>
        <li>heist • magic • crime</li>
        <li class="one-liner">Six outcasts plan an impossible heist in a gritty fantasy city.</li>
      </ul>

      <div class="cta-row">
        <button class="btn btn-gold">Start Reading</button>
        <button class="btn btn-outline">Mark as Finished</button>
      </div>

      <div class="book-section">
        <h2>About Six of Crows</h2>
        <p>
          Ketterdam: a bustling hub of international trade where anything can be had for the right price—and
          no one knows that better than criminal prodigy Kaz Brekker. When he’s offered a chance at a deadly
          heist that could make him rich beyond measure, he gathers a crew of outcasts to pull off the
          impossible.
        </p>
      </div>
    </div>
  </div>
</section>
