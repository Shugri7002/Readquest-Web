@page "/Home"
@model Readquest.Web.Pages.Home.IndexModel
@{
    ViewData["Title"] = "Home – Readquest";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/rq-dashboard.css" />

<section class="rq-dash">
  <div class="rq-wrap">
    <!-- Headline -->
    <header class="rq-head">
      <h1 class="rq-title">Welcome back, adventurer</h1>
      <p class="rq-sub">Continue your journey through the worlds of stories.</p>
    </header>

    <!-- Cards row -->
    <div class="rq-cards">
      <!-- Map -->
      <article class="rq-card rq-card--sm">
        <h3>Discover the Realm</h3>
        <p class="rq-muted">Explore your reading journeys across worlds</p>
        <button class="rq-btn rq-btn--gold">Enter Map</button>
      </article>

      <!-- Current book -->
      <article class="rq-card rq-card--reading">
        <div class="rq-book-left">
          <h3>A Game of Thrones</h3>
          <small class="rq-muted">By George R.R. Martin</small>

          <div class="rq-progress" style="--val:50%">
            <div class="rq-progress__bar"></div>
          </div>
          <div class="rq-progress__meta">
            <span>360 / 720</span><span>50%</span>
          </div>

          <button class="rq-btn rq-btn--gold">Continue reading</button>
        </div>

        <img class="rq-cover" src="~/img/a-game-of-thrones.jpg" alt="A Game of Thrones ">
      </article>

      <!-- Challenge -->
      <article class="rq-card rq-card--sm">
        <h3>Today’s Challenge</h3>
        <p class="rq-muted">Read for 30 minutes: 50 XP</p>
        <button class="rq-btn rq-btn--gold">Start Challenge</button>
      </article>
    </div>

    <!-- Recommended -->
    <section class="rq-rec">
      <h3 class="rq-rec__title">Recommended</h3>
      <div class="rq-rec__row">
        <a class="rq-rec__item" href="#"><img src="~/img/six-of-crows.jpg" alt=""><span class="rq-score">97%</span></a>
        <a class="rq-rec__item" href="#"><img src="~/img/anna-dressed-in-blood.jpg" alt=""><span class="rq-score">93%</span></a>
        <a class="rq-rec__item" href="#"><img src="~/img/good-girls-guide.jpg" alt=""><span class="rq-score">91%</span></a>
        <a class="rq-rec__item" href="#"><img src="~/img/legend.jpg" alt=""><span class="rq-score">94%</span></a>
        <a class="rq-rec__item" href="#"><img src="~/img/hunger-games.jpg" alt=""><span class="rq-score">95%</span></a>
        <a class="rq-rec__item" href="#"><img src="~/img/throne-of-glass.jpg" alt=""><span class="rq-score">90%</span></a>
        <a class="rq-rec__item" href="#"><img src="~/img/scythe.jpg" alt=""><span class="rq-score">98%</span></a>
        <a class="rq-rec__item" href="#"><img src="~/img/they-both-die.jpg" alt=""><span class="rq-score">97%</span></a>
      </div>
    </section>
  </div>
</section>

