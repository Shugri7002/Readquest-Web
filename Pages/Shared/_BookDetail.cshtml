@model dynamic
<section class="book-hero">
  <div class="book-inner">
    <div class="book-frame">
      <!-- Cover + meta -->
      <figure class="cover-wrap">
        <img class="book-cover" src="@Model.Cover" alt="@Model.Title" />
        <figcaption class="cover-meta">
          <span class="pages">@Model.Pages pages</span>
          <div class="chips">
            @foreach (var t in (IEnumerable<string>)Model.Tags) {
              <span class="chip">@t</span>
            }
          </div>
        </figcaption>
      </figure>

      <!-- Right column -->
      <div class="book-info">
        <h1 class="book-title">@Model.Title</h1>
        <div class="byline">by <strong>@Model.Author</strong></div>

        <ul class="meta-list">
          <li>@Model.AgeVibe</li>
          <li>If you like <b>@Model.IfYouLike</b></li>
          <li class="rating">
            <span class="stars">@Model.Stars</span>
            <span class="muted">&nbsp;@Model.Popularity</span>
          </li>
          <li>@string.Join(" â€¢ ", (IEnumerable<string>)Model.Tags)</li>
          <li class="one-liner">@Model.OneLiner</li>
        </ul>

        <div class="cta-row">
          <button class="btn btn-gold">Start Reading</button>
          <button class="btn btn-outline">Mark as Finished</button>
        </div>
      </div>
    </div>

    <div class="book-section">
      <h2>About @Model.AboutTitle</h2>
      <p>@Model.AboutText</p>
    </div>
  </div>
</section>
